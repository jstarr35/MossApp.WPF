<UserControl x:Class="MossApp.WPF.Views.Controls.SelectFilesControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Behaviors="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MossApp.WPF.Views.Controls"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mde="https://spiegelp.github.io/MaterialDesignExtensions/winfx/xaml"
    xmlns:vm="clr-namespace:MossApp.WPF.ViewModels"
    d:DataContext="{d:DesignInstance {x:Type vm:SelectFilesViewModel}}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:OpenMultipleFilesControlViewModel />
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition
                Width="Auto"
                MinWidth="581" />
        </Grid.ColumnDefinitions>
        <!--  import namespaces  -->



        <!--<mde:OpenDirectoryControl x:Name="SelectDirectoryControl" ShowHiddenFilesAndDirectories="False"
                          ShowSystemFilesAndDirectories="False"
                          CreateNewDirectoryEnabled="True"
