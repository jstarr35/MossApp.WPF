                    <Behaviors:CallMethodAction TargetObject="{Binding SelectDirectoryCommand}"/>
                </Behaviors:EventTrigger>
            </Behaviors:Interaction.Triggers>
        </mde:OpenDirectoryControl>-->
        <!--<mde:OpenMultipleFilesControl Grid.Column="1" Margin="16,16,16,16"
                                      ShowHiddenFilesAndDirectories="True"
                                      ShowSystemFilesAndDirectories="True"

                                      Filters="All files|*.*|C# files|*.cs|XAML files|*.xaml"
                                      FilesSelectedCommand="{Binding OpenFiles_FilesSelectedCommand}" />-->

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="24" />
                <RowDefinition Height="24" />
                <RowDefinition Height="100*" />
            </Grid.RowDefinitions>
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Text="{Binding Path=SelectedAction, Mode=TwoWay}" />
            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <CheckBox
                    VerticalAlignment="Center"
                    IsChecked="{Binding Path=ShowHiddenFilesAndDirectories, Mode=TwoWay}" />
                <TextBlock
                    Margin="4,0,0,0"
                    VerticalAlignment="Center"
                    Text="Show hidden directories" />
                <CheckBox
                    Margin="16,0,0,0"
                    VerticalAlignment="Center"
                    IsChecked="{Binding Path=ShowSystemFilesAndDirectories, Mode=TwoWay}" />
                <TextBlock
                    Margin="4,0,0,0"
                    VerticalAlignment="Center"
                    Text="Show system directories" />
                <CheckBox
                    Margin="16,0,0,0"
                    VerticalAlignment="Center"
                    IsChecked="{Binding Path=SwitchPathPartsAsButtonsEnabled, Mode=TwoWay}" />
                <TextBlock
                    Margin="4,0,0,0"
                    VerticalAlignment="Center"
                    Text="Switch path parts" />
            </StackPanel>
            <mde:OpenMultipleFilesControl
                Grid.Row="2"
                Margin="16"
                Cancel="OpenMultipleFilesControl_Cancel"
                FilesSelected="OpenMultipleFilesControl_DirectoriesSelected"
                Filters="All files|*.*|C# files|*.cs|XAML files|*.xaml"
                ShowHiddenFilesAndDirectories="{Binding Path=ShowHiddenFilesAndDirectories, Mode=TwoWay}"
                ShowSystemFilesAndDirectories="{Binding Path=ShowSystemFilesAndDirectories, Mode=TwoWay}"
                SwitchPathPartsAsButtonsEnabled="{Binding Path=SwitchPathPartsAsButtonsEnabled, Mode=TwoWay}" />
        </Grid>

        <!--  FileSelected="OpenFileControl_FileSelected"  -->

        <!--<mde:SaveFileControl ShowHiddenFilesAndDirectories="False"
                     ShowSystemFilesAndDirectories="False"
                     CreateNewDirectoryEnabled="True"
                     Filters="All files|*.*|C# files|*.cs|XAML files|*.xaml"/>-->
        <!--
            FileSelected="SaveFileControl_FileSelected"
            Cancel="SaveFileControl_Cancel"
        -->

